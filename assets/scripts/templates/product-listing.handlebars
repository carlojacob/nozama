{{#each products as |product|}}

  <div data-id="{{product.id}}" class="product">
    <div class="show-product">
        <img src={{product.imagePath}} alt="{{product.title}}" style="max-height:150px; max-width:150px">
    </div>
    <div class="show-product">
        Title: {{product.title}}
    </div>
    <div class="show-product">
        Description: {{product.description}}
    </div>
    <div class="show-product">
        Price: ${{product.price}}
    </div>
    <div>
      {{#if product.userIsLoggedIn}}
        <button class="add-cart" data-id="{{product.id}}">Add to Cart</button>
      {{else}}
        Sign in to Add to Cart
      {{/if}}
    </div>
  </div>

{{/each}}
